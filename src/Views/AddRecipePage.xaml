<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeOptimizer.Views.AddRecipePage"
             Title="Add Recipe">
    <ContentPage.ControlTemplate>
        <OnPlatform x:TypeArguments="ControlTemplate">

            <!-- Android Layout-->
            <On Platform="Android">
                <ControlTemplate>
                    <ScrollView>
                        <VerticalStackLayout Padding="16" Spacing="12"
                                             BindingContext="{TemplateBinding BindingContext}">

                            <!-- Android Header -->
                            <Grid Padding="8"
                                  ColumnDefinitions="*,*"
                                  RowDefinitions="Auto,Auto"
                                  ColumnSpacing="12"
                                  HorizontalOptions="Fill"
                                  MinimumWidthRequest="0">

                                <Button Grid.Column="0"
                                        Text="Import from PDF"
                                        HorizontalOptions="Fill"
                                        BackgroundColor="CornflowerBlue"
                                        Command="{Binding ImportFromPdfCommand}" />

                                <Button Grid.Column="1"
                                        Text="Import from URL*"
                                        HorizontalOptions="Fill"
                                        BackgroundColor="CornflowerBlue"
                                        Command="{Binding ImportFromUrlCommand}" />

                                <Label Grid.Row="1" Grid.ColumnSpan="2"
                                       Text="*Note: When using URL import, use the print page when possible. The URL will look something like 'https://www.inspiredtaste.net/38940/spaghetti-with-meat-sauce-recipe/itr_print/'"
                                       TextColor="Gray"
                                       FontAttributes="Italic"
                                       FontSize="12"
                                       LineBreakMode="WordWrap"
                                       HorizontalOptions="Fill"
                                       Margin="4,2,0,8" />
                            </Grid>
                            <ContentPresenter/>
                        </VerticalStackLayout>
                    </ScrollView>
                </ControlTemplate>
            </On>

            <!-- Windows Layout -->
            <On Platform="WinUI">
                <ControlTemplate>
                    <ScrollView Orientation="Vertical">
                        <VerticalStackLayout Padding="24" Spacing="16"
                                             BindingContext="{TemplateBinding BindingContext}">

                            <!-- Windows: buttons spaced and aligned left, note to the right -->
                            <Grid Padding="0"
                                  ColumnDefinitions="*,*"
                                  RowDefinitions="Auto,Auto"
                                  ColumnSpacing="16"
                                  HorizontalOptions="Fill"
                                  MinimumWidthRequest="0">
          
                                <Button Grid.Column="0"
                                        Text="Import from PDF"
                                        HorizontalOptions="Fill"
                                        Command="{Binding ImportFromPdfCommand}" />

                                <Button Grid.Column="1"
                                        Text="Import from URL*"
                                        HorizontalOptions="Fill"
                                        Command="{Binding ImportFromUrlCommand}" />

                                <Label Grid.Row="1" Grid.ColumnSpan="2"
                                       Text="*Note: When using URL import, use the print page when possible. The URL will look something like 'https://www.inspiredtaste.net/38940/spaghetti-with-meat-sauce-recipe/itr_print/'"
                                       FontSize="12"
                                       TextColor="Gray"
                                       LineBreakMode="WordWrap"
                                       HorizontalOptions="Fill"
                                       Margin="4,2,0,0"/>
                            </Grid>
                            <ContentPresenter/>
                        </VerticalStackLayout>
                    </ScrollView>
                </ControlTemplate>
            </On>
        </OnPlatform>
    </ContentPage.ControlTemplate>
    <!-- Shared form content renders inside ContentPresenter -->
    <ContentPage.Content>
        <VerticalStackLayout Spacing="12">
            <!-- Title -->
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Title " />
                        <Span Text="*" TextColor="Red" FontAttributes="Bold"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Entry Placeholder="Enter recipe title" Text="{Binding Title}" />

            <!-- Servings -->
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Servings " />
                        <Span Text="*" TextColor="Red" FontAttributes="Bold"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Entry Placeholder="Enter servings" Keyboard="Numeric" Text="{Binding Servings}" />

            <!-- Equipment -->
            <Label Text="Equipment (optional)" FontAttributes="Bold" />
            <Editor Placeholder="Add equipment (one per line)"
                    AutoSize="TextChanges"
                    Text="{Binding Equipment}" />
            <!-- Ingredients -->
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Ingredients " />
                        <Span Text="*" TextColor="Red" FontAttributes="Bold"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Editor Placeholder="One per line (e.g. 1 cup tomato (diced))"
                    AutoSize="TextChanges"
                    Text="{Binding IngredientsText}" />

            <!-- Steps -->
            <Label Text="Steps (optional)" FontAttributes="Bold" />
            <Editor Placeholder="Add cooking steps"
                    AutoSize="TextChanges"
                    Text="{Binding Steps}" />

            <!-- Time -->
            <Label Text="Prep/Cook Time (optional)" FontAttributes="Bold" />
            <Editor Placeholder='(e.g. "Prep: 15 mins/minutes/m, Cook: 1.5 hrs/hours/h")'
                    AutoSize="TextChanges"
                    Text="{Binding Time}"/>
            
            <!-- Save -->
            <Button Text="Save"
                    IsEnabled="{Binding IsValid}"
                    Command="{Binding SaveCommand}" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
